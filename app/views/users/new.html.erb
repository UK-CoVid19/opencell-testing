<div class="container col-md-4">
  <br>

  <h1>Create New User</h1>
  <% user = @user %>
  <%= form_with(model: user, local: true, url: create_staff_path, html: {class: 'was-validated'}) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, autofocus: true, class: 'form-control', required: true %>
      <div class="valid-feedback">Valid.</div>
      <div class="invalid-feedback">Invalid Email Address</div>
    </div>

    <div class="form-group">
      <%= form.label :role %>
      <%= form.select :role, User.roles.map {|key, val| [key.humanize, key]}, {},  class: 'form-control' %>
      <div class="valid-feedback">Valid.</div>
      <div class="invalid-feedback">Please fill out this field.</div>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
  <br/>
  <%= link_to 'Back', samples_path %>

</div>