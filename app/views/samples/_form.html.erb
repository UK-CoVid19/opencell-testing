<%= form_with(model: sample, local: true, html: {class: ''}) do |form| %>
  <% if sample.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sample.errors.count, "error") %> prohibited this sample from being saved:</h2>

      <ul>
        <% sample.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group  mb-2">
    <%= form.label :client_id, "Client" %>
    <%= form.collection_select :client_id, Client.real, :id, :name, {}, {class: 'form-control'} %>
  </div>
  <div class="form-group  mb-2">
    <%= form.label :uid, "UID" %>
    <%= form.text_field :uid, {class: 'form-control'} %>
