<div class="container table-responsive">

  <br>
  <h1>Plates Ready for station C</h1>
  <br>

  <%= form_for :plates , url: step4_sample_bulk_ready_test_path do |f| %>
    <table id="datatable" class="table table-striped table-bordered">
      <thead class="thead-dark">
      <tr>
        <th class="no-sort" width="25"><!-- check_box_tag--></th>
        <th>Plate</th>
        <th>Uid</th>
        <th class="no-sort">State</th>
        <th class="no-sort">Export</th>
        <th>Created</th>
        <th>Updated</th>
      </tr>
      </thead>
      <tbody>
      <% @plates.each do |plate| %>
        <tr>
          <td class="text-center" style="font-size: 2em; padding-top: 5px"><%= check_box_tag  'plates[][id]', plate.id %></td>
          <td><%= link_to "Plate #{plate.id}", plate %></td>
          <td><%= plate.uid %></td>
          <td><%= get_plate_badge(Plate.states.key(plate.state)) %></td>
          <td>
            <%= link_to "Download CSV", plate_path(plate, format: :csv), {'data-turbolinks': false}  %>
            <br/>
            <%= link_to "Download Json", plate_path(plate, format: :json), {'data-turbolinks': false}  %>
          </td>
          <td><%= plate.created_at.strftime('%A %-d %b %H:%M') %></td>
          <td><%= plate.updated_at.strftime('%A %-d %b %H:%M') %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="actions">
      <%= f.submit "Ready for qPCR", :class => 'btn btn-primary' %>
    </div>
  <% end %>

</div>