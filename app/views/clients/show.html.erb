<div class="container">
    <br>
    <div class="row">
        <div class="col-md-6 col-sm-12">

            <div class="card shadow">
                <div class="card-header ">
                    <h4>Client Profile</h4>
                </div>
                <div class="card-body">
                    <div class="mt-1 mb-1 ">
                        <span class="profile-icon">
                            <%= fa_icon "user" %>
                        </span>
                        <span>
                            <%= @client.name %>
                        </span>
                    </div>
                    <div class="mt-1 mb-1 ">
                        <span class="profile-icon">
                            <%= fa_icon "calendar" %>
                        </span>
                        <span>
                            <%= @client.created_at.strftime('%A %-d %b %H:%M') %>
                        </span>
                    </div>
                    <div class="mt-1 mb-1 ">
                        <span class="profile-icon">
                            <%= fa_icon "paper-plane" %>
                        </span>
                        <span>
                            <% if @client.notify %>
                            <%= fa_icon "check" %>
                            <% else %>
                            <%= fa_icon "times" %>
                            <% end %>
                        </span>
                    </div>
                    <div class="mt-1 mb-1 ">
                        <span class="profile-icon">
                            <%= fa_icon "desktop" %>
                        </span>
                        <span>
                            <% if !@client.url.nil? %>
                            <%= @client.url %>
                            <% end %>
                        </span>
                    </div>
                    <div class="row">
                        <ul>
                        <% @client.headers.each do |header| %>
                            <li><%= "#{header.key} : #{header.value}" %></li>
                        <% end %>
                        </ul>
                    </div>
                </div>
                <div class="card-footer">
                    <%= link_to "Stats", stats_client_path(@client), class: 'btn btn-primary' %>
                    <% if @client.notify? %>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Test Webhook</button>
                    <% end %>
                    <%= link_to "Edit", edit_client_path(@client), class: 'btn btn-info' %>
                    <%= link_to 'Back', clients_path, class: 'btn btn-secondary' %>
                </div>
            </div>
            <br>
            <% if @client.samples.any? %>
            <div class="card shadow">
                <div class="card-header">Tests</div>
                <ul class="list-group list-group-flush">
                    <% @client.samples.each do | sample| %>
                    <%= link_to sample, class: "list-group-item list-group-item-action flex-column align-items-start" do %>
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">#<%= sample.uid %></h5>
                        <small><%=sample.created_at.strftime('%A %-d %b %H:%M') %></small>
                    </div>
                    <p class="mb-1">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: <%= get_sample_bar(sample) %>%" aria-valuenow=<%= get_sample_bar(sample) %> aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    </p>
                    <small><%= get_badge(sample.state)%></small>
                    <% end %>
                    <% end %>
                </ul>
            </div>
            <% end %>
            <br />
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Test Webhook</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Calls webhook with <strong>test</strong> data </p>
        <input name="sample-id" id="sampleid" type="text" hidden>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" id="testWebhook">Test</button>
      </div>
    </div>
  </div>
</div>




<script>
$(document).on('turbolinks:load', async () => {
    
    async function testWebhook(){
        const token = document.querySelector('meta[name="csrf-token"]').content
        try{
            const resp = await fetch('/clients/<%= @client.id %>/testhook', {method: 'POST', headers: {'X-CSRF-TOKEN': token}})
            if(resp.ok){
                alert('success')
            }else{
                alert('failed')    
            }
        } catch(err) {
            alert('failed' + err)
        }
    }

    $('#testWebhook').on('click', testWebhook)
})
</script>