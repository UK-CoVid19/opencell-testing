<div class="container table-responsive">
  <h1>Clients</h1>
  <table id="datatable" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Samples</th>
            <th colspan="1"></th>
        </tr>
    </thead>
    <tbody>
        <% @clients.each do |client| %>
        <tr>
            <td>
              <%= client.name %>
            </td>
            <td>
              <%= client.samples.size %>
            </td>
            <td>
              <div class="d-flex justify-content-end">
                <div class="p-1">
                  <%= link_to client do %>
                    <button class="btn btn-primary">Show</button>
                  <% end %>
                </div>
                <div class="p-1">
                  <%= link_to stats_client_path(client) do %>
                    <button class="btn btn-secondary">Stats</button>
                  <% end %>
                </div>
                <div class="p-1">
                  <%= link_to edit_client_path(client) do %>
                    <button class="btn btn-outline-info">Edit</button>
                  <% end %>
                </div>
              </div>
            </td>            
        </tr>
        <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Client', new_client_path, class: 'btn btn-primary' %>
</div>