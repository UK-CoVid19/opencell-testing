<div class="container table-responsive">
  <h1>Tests</h1>

  <table id="tests-datatable" class="table table-striped" data-source="<%= tests_done_path(format: :json) %>">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Plate</th>
        <th>Created at</th>
        <th>Tested By</th>
        <th>Result File</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>


<script>
    $('#tests-datatable').dataTable({
        "processing": true,
        "serverSide": true,
        "ajax": {
            "url": $('#tests-datatable').data('source')
        },
        "pagingType": "full_numbers",
        "columns": [{
                "data": "id"
            },
            {
              "data": "plate_id"
            },
            {
                "data": "created_at"
            },
            {
                "data": "tested_by"
            },
            {
                "data": "result_file"
            },
            {
                "data": "link"
            }
        ]
        // pagingType is optional, if you want full pagination controls.
        // Check dataTables documentation to learn more about
        // available options.
    });
</script>

